<% @events.each do |event| %>
  <section class="event">
    <div class="summary">
      <h2><%= event.name %></h2>
      <h3><%= format_time(event) %> in <%= event.location %> </h3>
      <span class="price"><%= price(event) %></span>
      <p><%= truncate(event.description, length: 35, separator: " ") %></p>
    </div>
  </section>
<% end %>
